@model ProgettoSettimana5.Models.Camera

@{
    ViewData["Title"] = "Elimina Camera";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Elimina Camera #@Model.Numero</h1>
    <div>
        <a asp-action="Details" asp-route-id="@Model.CameraId" class="btn btn-info">
            <i class="bi bi-info-circle"></i> Dettagli
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Torna alla lista
        </a>
    </div>
</div>

<div class="alert alert-danger mb-4">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Attenzione!</h4>
    <p>Sei sicuro di voler eliminare questa camera? Questa operazione non può essere annullata.</p>
</div>

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Riepilogo dati della camera</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label fw-bold">Numero Camera:</label>
            <p>@Model.Numero</p>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Tipologia:</label>
            <p>@Model.Tipo</p>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Prezzo per notte:</label>
            <p>€ @Model.Prezzo.ToString("N2")</p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CameraId" />
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Conferma Eliminazione
                </button>
            </div>
        </form>
    </div>
</div>